{% extends 'OdiseoBackendBundle::layout.html.twig' %}

{% from 'OdiseoAppBundle:Backend/Macros:actions.html.twig' import create %}

{% block content_title %}
    <h1><i class="fa fa-plus-circle"></i> Crear usuario</h1>
{% endblock %}

{% block content %}
<div class="box box-primary">
    <form action="{{ path('odiseo_admin_user_create') }}" method="post" class="form-horizontal" novalidate>
        <div class="box-body">
            {{ form_errors(form) }}
            {% include 'OdiseoAppBundle:Backend/User:_form.html.twig' %}
        </div>
        <div class="box-footer">
            {{ create() }}
        </div>
    </form>
</div>
{% endblock %}
