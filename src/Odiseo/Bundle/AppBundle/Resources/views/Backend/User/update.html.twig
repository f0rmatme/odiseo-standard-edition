{% extends 'OdiseoBackendBundle::layout.html.twig' %}

{% from 'OdiseoAppBundle:Backend/Macros:actions.html.twig' import update %}

{% block content_title %}
    <h1><i class="fa fa-edit"></i> Editar usuario</h1>
{% endblock %}


{% block content %}
<div class="box box-primary">
    <form action="{{ path('odiseo_admin_user_update', {'id': user.id}) }}" method="post" class="form-horizontal" novalidate>
        <div class="box-body">
            {{ form_errors(form) }}
            <input type="hidden" name="_method" value="PUT">
            {% include 'OdiseoAppBundle:Backend/User:_form.html.twig' %}
        </div>
        <div class="box-footer">
            {{ update() }}
        </div>
    </form>
</div>
{% endblock %}
