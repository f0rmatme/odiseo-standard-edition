<div class="box">
    <div class="box-header">
        <h3 class="box-title">Datos</h3>
    </div>
    <div class="box-body no-padding">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ resource.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ resource.firstName }}</td>
                </tr>
                <tr>
                    <th>Apellido</th>
                    <td>{{ resource.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ resource.email }}</td>
                </tr>
                <tr>
                    <th>Fecha creación</th>
                    <td>{{ resource.createdAt|date('d-m-Y H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Último login</th>
                    <td>{{ resource.lastLogin|date('d-m-Y H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>