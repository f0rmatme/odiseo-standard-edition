{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block content %}
<section class="login">
    <h1 class="h3 mb-3 font-weight-normal">Login</h1>

    <a href="{{ path('app_connect_facebook') }}" class="btn btn-lg btn-info btn-block facebook"><i class="fa fa-facebook-square"></i> Facebook</a>
    <br>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('app_login_check') }}" method="post">
        {{ form_errors(form) }}
        <div class="form-group">
            <input type="email" class="form-control" name="_username" placeholder="Dirección de email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="_password" placeholder="Contraseña">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Signin</button>
    </form>

    <hr>

    <p>If you not have an account, please <a href="{{ path('app_register') }}">Register</a></p>
</section>
{% endblock %}